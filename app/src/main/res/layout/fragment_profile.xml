<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.probit.parkapp.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/fondoperfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="95dp"
        android:layout_height="86dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nombreperfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Nombre Apellido"
        android:textColor="#fafafa"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.443" />

    <ImageView
        android:id="@+id/image_mail"
        android:layout_width="32dp"
        android:layout_height="29dp"
        android:layout_marginStart="64dp"
        android:src="@drawable/ic_baseline_email_24"
        app:layout_constraintBottom_toBottomOf="@+id/button_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
        app:layout_constraintVertical_bias="0.278" />

    <ImageView
        android:id="@+id/image_phone"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginStart="64dp"
        android:src="@drawable/ic_baseline_contact_phone_24"
        app:layout_constraintBottom_toBottomOf="@+id/button_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
        app:layout_constraintVertical_bias="0.516" />

    <ImageView
        android:id="@+id/image_car"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:src="@drawable/ic_baseline_directions_car_24"
        app:layout_constraintBottom_toBottomOf="@+id/button_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
        app:layout_constraintVertical_bias="0.729" />

    <TextView
        android:id="@+id/textMail"
        android:layout_width="185dp"
        android:layout_height="25dp"
        android:layout_marginStart="64dp"
        android:text="Email adress"
        app:layout_constraintBottom_toBottomOf="@+id/button_logout"
        app:layout_constraintStart_toEndOf="@+id/image_mail"
        app:layout_constraintTop_toBottomOf="@+id/nombreperfil"
        app:layout_constraintVertical_bias="0.341" />

    <EditText
        android:id="@+id/textContact"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:hint='@string/PhoneNumber'
        app:layout_constraintBottom_toBottomOf="@+id/button_logout"
        app:layout_constraintStart_toEndOf="@+id/image_phone"
        app:layout_constraintTop_toBottomOf="@+id/nombreperfil"
        app:layout_constraintVertical_bias="0.539" />

    <Spinner
        android:id="@+id/spinner_Vehiculo"
        android:layout_width="185dp"
        android:layout_height="25dp"
        android:layout_marginStart="64dp"
        android:entries="@array/Vehiculos"
        app:layout_constraintBottom_toBottomOf="@+id/button_logout"
        app:layout_constraintStart_toEndOf="@+id/image_car"
        app:layout_constraintTop_toBottomOf="@+id/nombreperfil"
        app:layout_constraintVertical_bias="0.742" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="328dp"
        android:background="@drawable/buttonstyleithgradient"
        android:text="@string/log_out"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toEndOf="@+id/button_save"
        app:layout_constraintTop_toBottomOf="@+id/nombreperfil" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:background="@drawable/buttonstyleithgradient"
        android:text="@string/save"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
